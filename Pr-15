class Person:
    def __init__(self, name, age, city):
  
        self.name = name
        self.age = age
        self.city = city

    def info(self):
        
        print(f"Ім'я: {self.name}, Вік: {self.age}, Місто: {self.city}")

if __name__ == "__main__":
    name = input("Введіть ім'я: ")
    age = input("Введіть вік: ")
    city = input("Введіть місто проживання: ")

    person = Person(name, age, city)
    print("\nІнформація про людину:")
    person.info()
